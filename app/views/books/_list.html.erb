<h2>User info</h2>

<div class="profile-container">
   <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image" %>
   <table class="table">
     <tbody>
       <tr></tr>
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
       </tr>
     </tbody>
   </table>


  <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
</div>






<h2>New book</h2>

<!-- form_with部分 -->
<%= form_with model:book, url:'/books', local:true do |f| %>
<% if book.errors.any? %>
<%= book.errors.count %> errors prohibited this book from being saved:
<% book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>

<% end %>