<p id="notice"></p>

  <h2>User info</h2>
  <div class="profile-container">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <% if user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id) do %>
          <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
        <% end %>
      <% end %>
    </div>
    <h2 class="mt-3">New book</h2>

    <%= form_with model:book, url:'/books', local:true do |f| %>
      <% if book.errors.any? %>
        <%= book.errors.count %> errors prohibited this book from being saved:
        <% book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <br>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
    <% end %>

  </div>
