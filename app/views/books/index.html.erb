<%= render 'books/list', book: @book, user: @user %>


 <% if flash[:notice] %>
     <p id="notice">
         <font color="green">
       <%= flash[:notice] %>
       </font>
     </p>
   <% end %>

<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <%@books.each do |book| %>
    <tbody>
        <tr>
            <td><a class="Show" href=<%= book_path(book.id) %>><%= book.title %></a></td>
            <td><%= book.body %></td>
            <td>


              </td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "destroy", book_path(book.id), method: :delete,data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
    <% end %>
</table>

<%= paginate @books %>