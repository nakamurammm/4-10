<p id="notice"></p>
  <div class="container">
       <div class="row">
         <div class="col-md-3"><%= render 'books/list', book: @book, user: @user %></div>
           <div class="col-md-8 offset-md-1">

             <h2>Books</h2>
             <table class="table table-hover table-inverse">
                 <thard>
                     <tr>
                         <th></th>
                         <th>Title</th>
                         <th>Opinion</th>
                         <th colspan="3"></th>
                     </tr>
                 </thard>
                 <% @books.each do |book| %>
                 <tbody>
                   <tr>
                    <td>
                     <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>

                     <td><%= link_to book.title, book_path(book.id), class: "show" %></td>

                     <td><%= book.body %></td>

                   </tr>
                 </tbody>
                  <% end %>
             </table>
         </div>
     </div>
 </div>



