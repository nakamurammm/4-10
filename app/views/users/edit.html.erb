<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-as col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のerrorが発生しました
          <% @user.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
        <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
      <% end %>
    </div>
  </div>
</div>
