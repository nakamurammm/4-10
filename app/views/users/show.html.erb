 <% if flash[:notice] %>
   <p id="notice">
    <font color="green">
       <%= flash[:notice] %>
    </font>
   </p>
   <% end %>

   <%= render 'books/list', book: @book, user: @user %>

<h2>Books</h2>
  <table>
       <%@books.each do |book| %>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a class="Edit" href=<%= edit_book_path(book.id) %>>Edit</a></td>

      <td>
      <%= link_to "destroy", book_path(book), method: :delete,data: { confirm: '本当に消しますか？' } %>
      </td>
    </tr>
     <% end %>
  </table>

<a class="back" href="/books">Back</a>