<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><a class="Show" href=<%= book_path(book.id) %>><%= book.title %></a></td>
            <td><%= book.body %></td>
            <td>


              </td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "destroy", book_path(book.id), method: :delete,data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
    <% end %>
</table>

<h2>New book</h2>

<!-- form_with部分 -->
<%= form_with model:@book, url:'/books', local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>

<% end %>


